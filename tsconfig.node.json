{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.ts",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "tailwind.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
